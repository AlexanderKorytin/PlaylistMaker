<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_naw_line_top"
    android:orientation="vertical"
    tools:context="com.example.playlistmaker.currentplaylist.ui.fragments.CurrentPlayListFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="274dp">

            <FrameLayout
                android:id="@+id/cuccent_playlist_viewgroup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/current_playlist_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/bottom_naw_line_top"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/placeholder_playlist_item" />

            </FrameLayout>

            <TextView
                android:id="@+id/current_playlist_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_24"
                android:fontFamily="@font/ys_display_bold"
                android:textColor="@color/app_background_night"
                android:textFontWeight="700"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cuccent_playlist_viewgroup"
                tools:text="Name Album" />

            <TextView
                android:id="@+id/current_playlist_descr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/app_background_night"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/current_playlist_name"
                tools:text="Description Album" />

            <TextView
                android:id="@+id/summary_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/app_background_night"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/current_playlist_descr"
                tools:text="300 minutes" />

            <ImageView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_black"
                app:layout_constraintBottom_toBottomOf="@id/summary_time"
                app:layout_constraintStart_toEndOf="@id/summary_time"
                app:layout_constraintTop_toTopOf="@id/summary_time"
                app:tint="@color/app_background_night" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_background_night"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/point"
                app:layout_constraintStart_toEndOf="@id/point"
                app:layout_constraintTop_toTopOf="@id/point"
                tools:text="98 tracks" />

            <ImageView
                android:id="@+id/playlist_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:src="@drawable/playlist_sharing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/summary_time"
                app:tint="@color/app_background_night" />

            <ImageView
                android:id="@+id/playlist_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:src="@drawable/playlist_setting"
                app:layout_constraintStart_toEndOf="@id/playlist_sharing"
                app:layout_constraintTop_toBottomOf="@id/summary_time"
                app:tint="@color/app_background_night" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/back_current_playlist"
        style="@style/appImageBack"
        android:layout_gravity="start|top"
        android:layout_marginVertical="@dimen/padding_16"
        android:layout_marginStart="@dimen/padding_16"
        android:scaleType="centerCrop"
        app:tint="@color/app_background_night" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/current_playlist_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="250dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@drawable/line_4_dp" />

        <TextView
            android:id="@+id/playlist_is_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_12"
            android:gravity="center"
            android:text="@string/playlist_is_empty"
            android:textColor="@color/bottomNavViewColorIcon"
            android:textFontWeight="400"
            android:textSize="18sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/albums_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_12"
            tools:listitem="@layout/track_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_playList_setting_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="380dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@drawable/line_4_dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_12"
            android:paddingVertical="@dimen/padding_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/playlist_cover_bottom_sheet"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="13dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/placeholder_media_image" />

            <TextView
                android:id="@+id/playlist_name_bottom_sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                android:textFontWeight="400"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/playlist_cover_bottom_sheet"
                app:layout_constraintTop_toTopOf="@id/playlist_cover_bottom_sheet"
                tools:text="Very important text Very important text Very important text" />

            <TextView
                android:id="@+id/playlist_quantity_tracks_bottom_sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/bottom_sheet_behavior_playlists_text_quantity"
                android:textFontWeight="400"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/playlist_cover_bottom_sheet"
                app:layout_constraintTop_toBottomOf="@id/playlist_name_bottom_sheet"
                tools:text="Very important text Very important text Very important text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/sharing"
            style="@style/current_playlist_bottom_sheet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:layout_marginTop="@dimen/padding_8" />

        <TextView
            android:id="@+id/edit_information"
            style="@style/current_playlist_bottom_sheet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_information"/>

        <TextView
            android:id="@+id/delete_playlist"
            style="@style/current_playlist_bottom_sheet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_playlist"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>