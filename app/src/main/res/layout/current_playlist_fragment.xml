<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.playlistmaker.currentplaylist.ui.fragments.CurrentPlayListFragment">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_current_playlist"
            style="@style/appImageBack"
            android:layout_marginVertical="@dimen/padding_12"
            android:layout_marginStart="@dimen/padding_12"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_playlist_name"
            style="@style/appTextMenuName"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="@dimen/padding_12"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="@dimen/padding_4"
            android:paddingStart="@dimen/padding_4"
            app:layout_constraintStart_toEndOf="@id/back_current_playlist"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название" />


        <ImageView
            android:id="@+id/placeholder_list_albums"
            android:layout_width="@dimen/padding_120"
            android:layout_height="@dimen/padding_120"
            android:layout_gravity="center"
            android:layout_marginTop="46dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nothing_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_playlist_name" />

        <TextView
            android:id="@+id/placeholder_text"
            style="@style/textStyleHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:gravity="center"
            android:text="@string/playlist_empty"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/placeholder_list_albums" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/albums_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="@dimen/padding_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_playlist_name"
            tools:listitem="@layout/track_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>