<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backSetting"
            style="@style/appImageBack" />

        <TextView
            style="@style/appTextMenuName"
            android:text="@string/bot_settings" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        style="@style/SettingsTextViewSwitchStile"
        android:paddingEnd="6dp"
        android:text="@string/dark_theme"/>


    <TextView
        android:id="@+id/shareApp"
        style="@style/SettingsTextViewSwitchStile"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:id="@+id/writeToSupport"
        style="@style/SettingsTextViewSwitchStile"
        android:text="@string/write_support"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:id="@+id/userAgreement"
        style="@style/SettingsTextViewSwitchStile"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/nextpage" />

</LinearLayout>
