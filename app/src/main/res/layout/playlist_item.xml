<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_cover_recycler_contener"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="@dimen/padding_8"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/list_cover_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/playlist_create_background"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/playlist_name_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:paddingHorizontal="2dp"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_cover_recycler_contener"
        tools:text="Very important news text Very important news text Very important news text Very important news text" />

    <TextView
        android:id="@+id/quantity_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:paddingHorizontal="2dp"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_name_recycler"
        tools:text="0 tracks" />

</androidx.constraintlayout.widget.ConstraintLayout>