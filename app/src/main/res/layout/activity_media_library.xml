<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutStyle">

    <ImageView
        android:id="@+id/backMediaLibray"
        style="@style/appImageBack"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_16"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNameActivity"
        style="@style/appTextMenuName"
        android:text="@string/nameMediaLibrary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backMediaLibray"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMediaLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:tabTextColor="@color/tabtextcolor"
        app:tabIndicatorColor="@color/tabtextcolor"
        app:tabTextAppearance="@style/TabTextStyle"
        android:background="?attr/colorPrimary"

        app:tabIndicator="@drawable/my_tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabPaddingTop="@dimen/padding_16"
        app:tabPaddingBottom="@dimen/padding_16"
        app:tabMode="fixed"
        app:tabPaddingStart="@dimen/padding_16"
        app:tabPaddingEnd="@dimen/padding_16"

        android:layout_marginTop="@dimen/padding_16"

        app:layout_constraintTop_toBottomOf="@id/textNameActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMediaLibrary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutMediaLibrary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>