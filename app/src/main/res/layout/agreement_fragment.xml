<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharing.ui.fragments.AgreementFragment">

    <ImageView
        android:id="@+id/back_agreement"
        style="@style/appImageBack"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name_agreement"
        style="@style/appTextMenuName"
        android:layout_marginStart="@dimen/padding_24"
        android:layout_marginTop="14dp"
        android:text="@string/agreement"
        app:layout_constraintStart_toEndOf="@id/back_agreement"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/agreement_web"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"

        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name_agreement" />


</androidx.constraintlayout.widget.ConstraintLayout>