<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutStyle">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createAlbum"
        style="@style/findUpdateButtonStyle"
        android:layout_marginTop="@dimen/padding_24"
        android:text="@string/newPlaylist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/placeholder_list_albums"
        android:layout_width="@dimen/padding_120"
        android:layout_height="@dimen/padding_120"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/nothing_found"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@id/createAlbum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textStyleHint"
        android:textFontWeight="500"
        android:textColor="?attr/colorOnPrimary"
        android:text="@string/empty_list_albums"
        android:layout_marginTop="@dimen/padding_16"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/placeholder_list_albums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>