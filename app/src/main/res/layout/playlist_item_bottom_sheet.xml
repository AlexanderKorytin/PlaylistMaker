<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playlist_cover_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder_media_image" />

    <TextView
        android:id="@+id/playlist_name_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_cover_bottom_sheet"
        app:layout_constraintTop_toTopOf="@id/playlist_cover_bottom_sheet"
        tools:text="Very important text Very important text Very important text" />

    <TextView
        android:id="@+id/playlist_quantity_tracks_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="@color/bottom_sheet_behavior_playlists_text_quantity"
        android:textFontWeight="400"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_cover_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@id/playlist_name_bottom_sheet"
        tools:text="Very important text Very important text Very important text" />

</androidx.constraintlayout.widget.ConstraintLayout>