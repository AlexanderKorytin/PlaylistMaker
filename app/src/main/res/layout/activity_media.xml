<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".player.ui.fragments.MediaPlayerFragment">

    <!-- Вёрстка экрана «Аудиоплеер» -->

    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- кнопка назад -->
        <ImageView
            android:id="@+id/back_media"
            style="@style/appImageBack"
            android:layout_marginVertical="@dimen/padding_12"
            android:layout_marginStart="@dimen/padding_12"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            style="@style/LinearLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/LinearLayoutStyle">
                <!-- вернее поле -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/top_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="26dp" />
                <!-- левое поле -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/padding_24" />
                <!-- правое поле -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/padding_24" />
                <!-- левое поле для текстовых полей -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/padding_16" />
                <!-- правое поле для текстовых полей -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/padding_16" />

                <!-- обложка альбома -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/track_image_media"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/track_name_media"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/top_guideline"
                    app:layout_constraintWidth_max="316dp"
                    tools:src="@drawable/placeholder_media_image" />
                <!-- название песни -->
                <TextView
                    android:id="@+id/track_name_media"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_24"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="400"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toTopOf="@id/track_artist_media"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/track_image_media"
                    tools:text="Yesterday (Remastered 2009)" />
                <!-- исполнитель-->
                <TextView
                    android:id="@+id/track_artist_media"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_12"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@id/play_pause"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/track_name_media"
                    tools:text="The Beatles" />
                <!-- кнопка добавить в альбом -->
                <ImageButton
                    android:id="@+id/add_collection"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/rounded_button_media"
                    app:layout_constraintBottom_toBottomOf="@id/play_pause"
                    app:layout_constraintEnd_toStartOf="@+id/play_pause"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toTopOf="@id/play_pause"
                    app:srcCompat="@drawable/add_collection" />
                <!-- кнопка играть/пауза -->
                <ImageButton
                    android:id="@+id/play_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38.33dp"
                    android:background="?attr/colorPrimary"
                    android:hapticFeedbackEnabled="true"
                    app:layout_constraintBottom_toTopOf="@id/timer_media"
                    app:layout_constraintEnd_toStartOf="@id/add_favorite"
                    app:layout_constraintStart_toEndOf="@id/add_collection"
                    app:layout_constraintTop_toBottomOf="@id/track_artist_media"
                    app:srcCompat="@drawable/play_button" />
                <!-- кнопка добавить в избранное -->
                <ImageButton
                    android:id="@+id/add_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_media"
                    app:layout_constraintBottom_toBottomOf="@id/play_pause"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/play_pause"
                    app:layout_constraintTop_toTopOf="@id/play_pause"
                    app:srcCompat="@drawable/in_favorite_false" />
                <!-- прогресс произведения -->
                <TextView
                    android:id="@+id/timer_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_12"
                    android:fontFamily="@font/ys_display_medium"
                    android:lines="1"
                    android:textFontWeight="500"
                    android:textSize="14sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/play_pause" />


                <!-- Названия параметров трека -->
                <!-- длительность трека -->
                <TextView
                    android:id="@+id/time_media"
                    style="@style/Media_text_name"
                    android:layout_marginTop="30dp"
                    android:paddingVertical="@dimen/padding_8"
                    android:text="@string/duration"
                    app:layout_constraintBottom_toTopOf="@+id/album_media"
                    app:layout_constraintStart_toStartOf="@id/left_guideline_text"
                    app:layout_constraintTag="time_media"
                    app:layout_constraintTop_toBottomOf="@id/timer_media"
                    app:layout_constraintVertical_chainStyle="packed" />
                <!-- название альбома -->
                <TextView
                    android:id="@+id/album_media"
                    style="@style/Media_text_name"
                    android:paddingVertical="@dimen/padding_8"
                    android:text="@string/album"
                    app:layout_constraintBottom_toTopOf="@+id/year_media"
                    app:layout_constraintStart_toStartOf="@id/left_guideline_text"
                    app:layout_constraintTop_toBottomOf="@id/time_media" />
                <!-- год -->
                <TextView
                    android:id="@+id/year_media"
                    style="@style/Media_text_name"
                    android:paddingVertical="@dimen/padding_8"
                    android:text="@string/year"
                    app:layout_constraintBottom_toTopOf="@+id/genre_media"
                    app:layout_constraintStart_toStartOf="@id/left_guideline_text"
                    app:layout_constraintTop_toBottomOf="@id/album_media" />
                <!-- жанр -->
                <TextView
                    android:id="@+id/genre_media"
                    style="@style/Media_text_name"
                    android:paddingVertical="@dimen/padding_8"
                    android:text="@string/genre"
                    app:layout_constraintBottom_toTopOf="@+id/country_media"
                    app:layout_constraintStart_toStartOf="@id/left_guideline_text"
                    app:layout_constraintTop_toBottomOf="@id/year_media" />
                <!-- страна -->
                <TextView
                    android:id="@+id/country_media"
                    style="@style/Media_text_name"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:paddingVertical="@dimen/padding_8"
                    android:text="@string/country"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/left_guideline_text"
                    app:layout_constraintTop_toBottomOf="@id/genre_media" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/texts_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="end"
                    app:constraint_referenced_tags="time_media" />


                <!-- значения параметров трека -->
                <!-- длительность трека -->
                <TextView
                    android:id="@+id/time_media_mean"
                    style="@style/Media_text_mean"
                    android:layout_marginTop="30dp"
                    android:paddingVertical="@dimen/padding_8"
                    app:layout_constraintBottom_toTopOf="@id/album_media_mean"
                    app:layout_constraintTop_toBottomOf="@id/timer_media"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="@string/duration" />
                <!-- название альбома -->
                <TextView
                    android:id="@+id/album_media_mean"
                    style="@style/Media_text_mean"
                    android:paddingVertical="@dimen/padding_8"
                    app:layout_constraintBottom_toTopOf="@id/year_media_mean"
                    app:layout_constraintTop_toBottomOf="@id/time_media_mean"
                    tools:text="@string/album" />
                <!-- год -->
                <TextView
                    android:id="@+id/year_media_mean"
                    style="@style/Media_text_mean"
                    android:paddingVertical="@dimen/padding_8"
                    app:layout_constraintBottom_toTopOf="@id/genre_media_mean"
                    app:layout_constraintTop_toBottomOf="@id/album_media_mean"
                    tools:text="@string/year" />
                <!-- жанр -->
                <TextView
                    android:id="@+id/genre_media_mean"
                    style="@style/Media_text_mean"
                    android:paddingVertical="@dimen/padding_8"
                    app:layout_constraintBottom_toTopOf="@id/country_media_mean"
                    app:layout_constraintTop_toBottomOf="@id/year_media_mean"
                    tools:text="@string/genre" />
                <!-- страна -->
                <TextView
                    android:id="@+id/country_media_mean"
                    style="@style/Media_text_mean"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:paddingVertical="@dimen/padding_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genre_media_mean"
                    tools:text="@string/country" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/playlists_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="240dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Вёрстка Bottom Sheet с кнопкой и списком -->

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@drawable/line_4_dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_12"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_16"
            android:paddingTop="18dp"
            android:paddingBottom="@dimen/padding_12"
            android:text="@string/add_to_playlist"
            android:textAllCaps="false"
            android:textColor="@color/tabtextcolor"
            android:textFontWeight="500"
            android:textSize="19sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_album_player"
            style="@style/findUpdateButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_16"
            android:paddingVertical="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/newPlaylist" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlists_recycler_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_24"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/playlist_item_bottom_sheet" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>