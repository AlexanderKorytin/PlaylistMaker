<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_indentation</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="Track_ViewTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsTextViewSwitchStile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingVertical">@dimen/padding_21</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/set_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="appImageBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/padding_16</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:src">@drawable/back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="appTextMenuName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
    </style>

    <style name="Media_text_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">9dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintStart_toStartOf">@id/left_guideline_text</item>
    </style>

    <style name="Media_text_mean">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">9dp</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">end</item>
        <item name="layout_constraintStart_toStartOf">@id/textsBarrier</item>
        <item name="layout_constraintEnd_toStartOf">@id/right_guideline_text</item>
    </style>
</resources>