        <item name="colorPrimary">@color/set_background</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/switchSettingsColor</item>
        <item name="colorSecondaryVariant">@color/switchSettingsColorVariant</item>
        <item name="colorOnSecondary">@color/icon_settings</item>
        <item name="thumbTint">@color/switchSettingsColor</item>
        <item name="trackTint">@color/switchSettingsColorVariant</item>
        <item name="tabIndicatorColor">@color/app_background_night</item>
        <item name="tabTextColor">@color/app_background_night</item>
        <item name="android:textColor">@color/app_background_night</item>
